model User {
  id        Int         @id @default(autoincrement())
  nama      String
  email     String      @unique
  password  String
  alamat    Alamat?
  role      Role
  media     Media[]
  transaksi Transaksi[]
  produk    Produk[]

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Produk {
  id        Int         @id @default(autoincrement())
  nama      String
  deskripsi String
  harga     Float
  satuan    String
  stok      Int
  kategori  Kategori
  media     Media[]
  transaksi Transaksi[]
  id_user   Int
  user User @relation(fields: [id_user], references: [id])

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Media {
  id        Int     @id @default(autoincrement())
  id_produk Int?
  id_user   Int?
  id_link   String
  link      String
  produk    Produk? @relation(fields: [id_produk], references: [id])
  user      User?   @relation(fields: [id_user], references: [id])

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Transaksi {
  id         Int        @id @default(autoincrement())
  id_user    Int
  id_produk  Int
  jumlah     Int
  harga      Float
  alamat     String
  note       String?
  status     Status     @default(DIPROSES)
  pembayaran Pembayaran
  user       User       @relation(fields: [id_user], references: [id])
  produk     Produk     @relation(fields: [id_produk], references: [id])

  created DateTime @default(now())
  updated DateTime @updatedAt
}

enum Role {
  ADMIN
  PENJUAL
  PEMBELI
}

enum Kategori {
  SAYUR
  DAGING_DAN_IKAN
  BUAH
  TELUR_TAHU_TEMPE
}

enum Status {
  SELESAI
  MENUNGGU
  DITOLAK
  DIPROSES
  DIKONFIRMASI
}

enum Pembayaran {
  CASH
  TRANSFER
}

enum Alamat {
  TELUK
  BERKOH
  TANJUNG
  KARANGKLESEM
  PURWOKERTO_KIDUL
  KARANGPUCUNG
}
